{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",    
    "templates": {
        "party.allButtons":{
            "type":"panel",
            "name":"basicRoundRobin.allButtons",
            "visibility":"visible",
            "xFactor":0.75,
            "yFactor":0.10,
            "padding":20,
            "borderThickness":3,
            "borderBrush":{
                "color":"#FF009600"
            },
            "backgroundBrush":{
                "color":"#C4FFFFFF"
            },
            "children":[
                {
                    "type":"textblock",
                    "text":"Party",
                    "color":"#FF009600",
                    "font":{
                        "bold":true,
                        "face":"Tahoma",
                        "heightFactor":3
                    }
                }
            ],
            "acceptsKeyboardFocus":false,
            "acceptsMouseFocus":false,
            "inputHooks": {
                "hook1":{
                    "control":{
                        "controlType": "button",
                        "deviceType": "keyboard",
                        "minValue": 1,
                        "maxValue": 1
                    },
                    "eventHandler":{
                        "type":"method",
                        "object":"BRRSession",
                        "method":"OnButtonHook"
                    },
                    "keyboardFocus": false,
                    "mouseFocus": false
                }
            }
        },
